@inherits DataResultInfoBase<PersonResult>

@if (DataResult is { } dataResult)
{
    @if (!string.IsNullOrWhiteSpace(HeaderClass))
    {
        <h5 class="@HeaderClass.ToLower()">@dataResult.Firstname @dataResult.Lastname</h5>
    }
    else
    {
        <h5>@dataResult.Firstname @dataResult.Lastname</h5>
    }

    @if (ShowImage)
    {
        <Image ImageResult="dataResult.ImageResult" />
    }
}