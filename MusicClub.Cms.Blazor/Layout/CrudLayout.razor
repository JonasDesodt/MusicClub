@layout MainLayout

@inherits LayoutComponentBase

@implements IDisposable

@inject MemoryService MemoryService
@inject NavigationManager NavigationManager

<section class="layout">
    @if (NavigationManager.ToBaseRelativePath(NavigationManager.Uri) == Model.ToLower())
    {
        <NavLink href="/" class="button flex-start">Home</NavLink>
    }
    else
    {
        <NavLink href="@($"/{Model.ToLower()}")" class="button flex-start">Index</NavLink>
    }

    <h2>@Model</h2>

    @Body
</section>

@code {
    public void Dispose() => MemoryService.Clear();
}