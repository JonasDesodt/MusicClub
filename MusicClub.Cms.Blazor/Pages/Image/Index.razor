@page "/image"

@layout ImageCrudLayout

<IndexPageContainer IsSelectOpen="false">
    <Content>
        <ImageDataResultIndexPage Context="Context">
            <Header>
                <IndexPageHeader Model="Image" />
            </Header>

            <FilterInputs>
                <ImageFilterFormModelInputs FilterFormModel="Context" />
            </FilterInputs>

            <Template>
                <IndexPageTemplate Model="Image" Id="Context.DataResult.Id">
                    <Info>
                        <ImageDataResultInfo DataResult="Context.DataResult" ShowImage="Context.ShowImages" />
                    </Info>
                </IndexPageTemplate>
            </Template>
        </ImageDataResultIndexPage>
    </Content>
</IndexPageContainer>