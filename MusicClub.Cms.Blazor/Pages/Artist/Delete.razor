@page "/artist/delete/{id:int}"
@using MusicClub.Cms.Blazor.Helpers

@layout ArtistCrudLayout

<DeleteRequest TDataRequest="ArtistRequest"
               TDataResult="ArtistResult"
               TFilterRequest="ArtistFilterRequest"
               TFilterResult="ArtistFilterResult"
               TApiService="IArtistService"
               TDataResultHelpers="IDataResultHelpers<ArtistResult>"
               Id="Id"
               Model="Artist"
               Context="Context">
    <Info>
        <li>
            <p class="label">Id</p>
            <p class="input">@Context.DataResult.Id</p>
        </li>

        <li>
            <p class="label">Alias</p>
            <p class="input">@Context.DataResult.Alias</p>
        </li>

        <li>
            <p class="label">Created</p>
            <p class="input">@Context.DataResult.Created.ToLongTimeString()</p>
        </li>

        <li>
            <p class="label">Updated</p>
            <p class="input">@Context.DataResult.Updated.ToLongTimeString()</p>
        </li>

        <li>
            <p class="label">Person</p>

            <PersonDataResultInfo DataResult="Context.DataResult.PersonResult" HeaderClass="paragraph" ShowImage="Context.ShowImages"/>
        </li>

        <li>
            <p class="label">Image</p>

            <ImageDataResultInfo DataResult="Context.DataResult.ImageResult" HeaderClass="paragraph" ShowImage="Context.ShowImages" />
        </li>

        <li>
            <p class="label">Dependencies</p>
            @*                 @if(Context.HasCriticalDependencies()) *@
            <ul>
                <li>Performances: @Context.DataResult.PerformancesCount</li>
            </ul>
        </li>
    </Info>
</DeleteRequest>

@code {
    [Parameter]
    public int Id { get; set; }
}